@model DemoWebBanHang.Models.SanPham

<div class="col-md-3 col-sm-6 product-zoom">
    <div class="thumbnail" style="border: none">
        <a href="@Url.Action("ProductDetail", "Home", new { ProductID = @Model.ID_SanPham })">
            <div class="thumbnail"><img style="object-fit:cover;height:250px" src="@Model.HinhAnh" alt="@Model.TenSanPham"></div>

            <div class="caption">
                <h3 class="product-name" style="margin-top:0">@Model.TenSanPham</h3>
                @if (Model.SoLuong <= 0)
                {
                    <p class="price-index">
                        @string.Format("{0:0,0 ₫}", Model.DonGia).Replace(",", ".")
                        <span class="error">Hết hàng</span>
                    </p>
                }
                else
                {
                    <p class="price-index">
                        @string.Format("{0:0,0 ₫}", Model.DonGia).Replace(",", ".")
                        <span class="error" style="color:green">(@Model.SoLuong)</span>
                    </p>
                }
            </div>
        </a>
    </div>
</div>

