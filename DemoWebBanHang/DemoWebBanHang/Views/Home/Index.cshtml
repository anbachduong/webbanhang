@model List<DemoWebBanHang.Models.SanPham>
@{
    ViewBag.Title = "Trang chủ";
    ViewBag.Heading = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom:20px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="\Content\images\banner.jpeg" alt="Banner 1" style="width:100%;">
            </div>

            <div class="item">
                <img src="\Content\images\banner2.jpeg" alt="Banner 2" style="width:100%;">
            </div>

            <div class="item">
                <img src="\Content\images\banner3.jpeg" alt="Banner 3" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="header">
    <h3 style="display:inline">Sản phẩm</h3>
    <a href="@Url.Action("AllProduct","Home")" class="view">Xem thêm <i class="fa fa-angle-right"></i></a>
</div>
<div class="product">
    @foreach (var sanpham in Model)
    {
        @Html.Partial("View", sanpham);
    }
</div>
<div class="col-md-6">
    <div class="header">
        <h4 style="display:inline">Khuyến mại</h4>
    </div>
    <div class="promotion" style="padding:0;margin-bottom:50px">
        <div>
            <img src="~/Content/images/promotion/0006126_470.jpeg" />
        </div>
        <div>
            <img src="~/Content/images/promotion/0006127_470.jpeg" />
        </div>
        <div>
            <img src="~/Content/images/promotion/0006128_470.jpeg" />
        </div>
        <div>
            <img src="~/Content/images/promotion/0006129_470.jpeg" />
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="header">
        <h4 style="display:inline">Video giới thiệu</h4>
    </div>
    <div class="videoslider" style="margin-bottom:50px">
        <object data="https://www.youtube.com/embed/zDtd56ggzzE" style="height:284px;width:100%"></object>
    </div>
</div>
<div class="header">
    <h3 style="display:inline">Sản phẩm mới nhất</h3>
    <a href="@Url.Action("AllProduct","Home")" class="view">Xem thêm <i class="fa fa-angle-right"></i></a>
</div>
<div class="new-product">
    @for (int i = 0; i < 8; i++)
    {
        @Html.Partial("View", Model[i]);
    }
</div>

